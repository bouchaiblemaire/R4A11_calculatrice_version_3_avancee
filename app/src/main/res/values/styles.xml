<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_composant_text">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">@dimen/composant_text_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_edittext" parent="style_composant_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>

    <style name="style_button" parent="style_composant_text">
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>
</resources>